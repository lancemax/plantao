<div class="content">

	<h2>Produtos Arrematados</h2>
	<ul class="thumbnails">
	<% if !@endedCampaigns.empty? %>
		
		<%@endedCampaigns.each do |camp|%>
			<li class="span6">
				<div class="thumbnail">

					<h4><%= camp.product.name %> </h4>
					<%= image_tag camp.product.image.url(:small) %>

					<b class="btn">
						Maximo de Lances: <b class="btn btn-primary"> <%= camp.max_bids %></b>
					</b>
					<b class="btn">
						Lances Efetuados: <div class="btn btn-danger"> <%= camp.numbids %></div>
					</b>
					<b class="btn btn-large">
						Ganhador: <div class="btn btn-success"> <%= camp.showWinner(camp.id)%></div>
					</b>
					<b class="btn btn-large">
						Valor: <div class="btn btn-success">R$ <%= @bid.getPrice(camp.bid_id) %></div>
					</b>
					<br clear="all" /><br clear="all" />
					<div class="btn btn-warning" data-toggle="collapse" data-target="#leilao<%= camp.id %>">
						Ver Todos os Lances
					</div>

					<div class="todosLances collapse out" id="leilao<%= camp.id %>">
						<h3>Histórico de Lances</h3>
						<table class="table table-striped table-bordered">
							<thead><tr><th>Lance</th><th>Usuário</th><th>Data</th></tr></thead>
							<tbody>
							<%@bid.allBidsCampaign(camp.id).each do |bid| %>
								<tr><td><%= bid.price %> </td><td><%= bid.user.name %></td><td><%= bid.created_at.strftime("%d/%m/%Y - %H:%M:%S") %></td></tr>
							<% end %>
							</tbody>
						</table>

					</div>

				</div>

				
			</li>
			
			
			
		<% end -%>
		</div>
	<% else %>

		<h3>Não há Leilões Arrematados</h3>

	<% end -%>
	<br clear="all" />
</div>