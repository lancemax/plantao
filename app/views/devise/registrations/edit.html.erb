<% @pagetitle = "Editar Dados" %>
<div class="container">
  <div class="row-fluid">
    <div class="span2"></div>
    <div class="span8">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put,:class => 'well-signin form-horizontal' }) do |f| %>
        <%= devise_error_messages! %>

        <div class="control-group">
          <%= f.label 'Nome'  , :class => 'control-label' %>
          <div class="controls"><%= f.text_field :name, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
          <%= f.label :email  , :class => 'control-label' %>
          <div class="controls"><%= f.email_field :email, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
          <%= f.label 'Telefone'  , :class => 'control-label' %>
          <div class="controls"><%= f.text_field :phone, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
          <%= f.label 'Celular'   , :class => 'control-label' %>
          <div class="controls"><%= f.text_field :cellphone, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
          <%= f.label 'Especialidade' , :class => 'control-label' %>
          <div class="controls"><%= f.association :area, :label => false, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
          <%= f.label 'Local de Trabalho' , :class => 'control-label' %>
          <div class="controls"><%= f.text_field :workplace, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
          <%= f.label 'Senha' , :class => 'control-label' %>
          <div class="controls"><%= f.password_field :password, :autocomplete => "off" ,:class => 'input-xlarge' %><br> <i>(Deixe em branco, caso não queira mudar sua senha)</i></div>
        </div>

        <div class="control-group">
          <%= f.label 'Repita a Senha' , :class => 'control-label' %>
          <div class="controls"><%= f.password_field :password_confirmation ,:class => 'input-xlarge'%> </div>
        </div>

        <!--div class="control-group">
          <%= f.label 'Senha Atual' , :class => 'control-label' %>
          <div class="controls"><%= f.password_field :current_password %> <i>(Você precisa informar a senha atual para completar as alterações)</i></div>
        </div-->

        <div class="control-group">
          <div class="controls"><%= f.submit "Salvar", :class => "btn btn-large btn-primary" %>
            <%= link_to "Voltar", :back ,:class => 'btn btn-large btn-warning'%>
          </div>
        </di
      <% end %>
    </div>
  </div>
  <div class="span2"></div>
</div>v>
