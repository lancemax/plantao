<div class="well hero">
  <h1>Meus Dados</h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put,:class => 'well form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label 'Nome'  , :class => 'control-label' %>
    <div class="controls"><%= f.text_field :name, :class => 'span4' %></div>
  </div>

  <div class="control-group">
    <%= f.label :email  , :class => 'control-label' %>
    <div class="controls"><%= f.email_field :email, :class => 'span4' %></div>
  </div>

   <div class="control-group">
    <%= f.label :crm  , :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :crm, :class => 'span2' %>
      <%= f.collection_select :state_id, State.all, :id, :acronym, :prompt => "UF" %>
      
    </div>
  </div>


  <div class="control-group">
    <%= f.label 'Telefone'  , :class => 'control-label' %>
    <div class="controls"><%= f.text_field :phone, :class => 'span2' %></div>
  </div>

  <div class="control-group">
    <%= f.label 'Celular'   , :class => 'control-label' %>
    <div class="controls"><%= f.text_field :cellphone, :class => 'span2' %></div>
  </div>

  <div class="control-group">
        <%= f.label 'Especialidade'  , :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :area_id, Area.all, :id, :name, :include_blank => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label 'Local de Trabalho' , :class => 'control-label' %>
    <div class="controls"><%= f.text_field :workplace, :class => 'span4' %></div>
  </div>

  <div class="control-group">
    <%= f.label 'Senha' , :class => 'control-label' %>
    <div class="controls"><%= f.password_field :password, :autocomplete => "off" %> <i>(Deixe em branco, caso não queira mudar sua senha)</i></div>
  </div>

  <div class="control-group">
    <%= f.label 'Repita a Senha' , :class => 'control-label' %>
    <div class="controls"><%= f.password_field :password_confirmation %> </div>
  </div>

  <!--div class="control-group">
    <%= f.label 'Senha Atual' , :class => 'control-label' %>
    <div class="controls"><%= f.password_field :current_password %> <i>(Você precisa informar a senha atual para completar as alterações)</i></div>
  </div-->

  <div class="form-actions"><%= f.submit "Editar", :class => "btn btn-primary" %></div>
<% end %>

<%= link_to "Voltar", :back %>
