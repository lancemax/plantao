<% @pagetitle = "Cadastre-se" %>

<div class="container">
  <div class="row-fluid">
    <div class="span2"></div>
    <div class="span8">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'well-signin form-horizontal' }) do |f| %>
        <%= devise_error_messages! %>

        <div class="control-group">
        	<%= f.label 'Nome' 	, :class => 'control-label' %>
        	<div class="controls"><%= f.text_field :name, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
        	<%= f.label 'Telefone' 	, :class => 'control-label' %>
        	<div class="controls"><%= f.text_field :phone, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
        	<%= f.label 'Celular' 	, :class => 'control-label' %>
        	<div class="controls"><%= f.text_field :cellphone, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
        	<%= f.label 'Local de Trabalho'	, :class => 'control-label' %>
        	<div class="controls"><%= f.text_field :workplace, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
          <%= f.label 'Especialidade' , :class => 'control-label' %>
          <div class="controls"><%= f.association :area, :label => false, :include_blank => false, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
          <%= f.label :email  , :class => 'control-label' %>
          <div class="controls"><%= f.email_field :email, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
        	<%= f.label 'Senha', :class => 'control-label' %>
        	<div class="controls"><%= f.password_field :password, :class => 'input-xlarge' %></div>
        </div>

        <div class="control-group">
        	<%= f.label 'Repetir Senha', :class => 'control-label' %>
        	<div class="controls"><%= f.password_field :password_confirmation, :class => 'input-xlarge' %></div>
        </div>


        

        <div class="control-group">
          <div class="controls"><%= f.submit "Cadastrar", :class => "btn huge btn-primary" %></div>
        </div>
      <% end %>
    </div>
      <div class="span2"></div>    
    </div>
  </div>
</div>