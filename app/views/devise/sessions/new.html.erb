<% @pagetitle = "Login PlantÃ£oNet" %>

  <div class="container">
    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4 destaque">
         

        <%= simple_form_for(resource,:as => resource_name,:url => session_path(resource_name),:html => {:class => 'well-signin form' }) do |f| %>
            <b >Logar com
              <%= link_to image_tag('facebook.png'),user_omniauth_authorize_path(:facebook)  %>
              <%= link_to image_tag('google.png'), user_omniauth_authorize_path(:google_oauth2) %>
            </b>
            <br clear="all" /><br clear="all" />

          	<%= f.label 'E-mail' 	, :class => 'control-label' %>
          	<%= f.email_field :email, :class => 'input-xlarge' %>
          
          	<%= f.label 'Senha', :class => 'control-label' %>
          	<%= f.password_field :password, :class => 'input-xlarge' %>
            <br clear="all" />

          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %> Lembrar-me
          <% end -%>

          <%= f.submit "Entrar", :class => "btn btn-large btn-success",:align=>'right' %>
        <% end %>

      </div> 
      <div class="span4"></div>
    </div> 
  </div>
