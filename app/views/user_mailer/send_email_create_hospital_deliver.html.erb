<%= render "user_mailer/top_mail" %>

<table class="w580" border="0" cellpadding="0" cellspacing="0" width="615">
  <tbody>
    <tr>
      <td class="w580" width="615">
        <p class="article-title" align="left">Hospital criado/editado:</p>
        <div class="article-content" align="left">
          <!-- // Begin Module: Standard Content \\ -->
          <table border="0" cellpadding="5" cellspacing="0" width="100%">
            <tr>
                <th width="180">Hospital:</th><td width="280"><%= @hospital.name %></td>
                <td rowspan="6" width="250">
                  <span class="article-title">
                    <a href="<%= @url%>/hospitals/<%=@hospital.id%>">
                      <img src="<%= @url+@hospital.image.url(:small) %>" width="250" border="0" align="right" class="w300" label="Image" />
                    </a>
                  </span>
                </td>
            </tr>                                                             
            <tr>
              <th>Endereço:</th> 
              <td><%= @hospital.address %></td>
            </tr>
            <tr>
              <th>Bairro:</th> 
              <td><%= @hospital.neighborhood %>
            </td>
            </tr>
            <tr>
              <th>Complemento:</th> 
              <td><%= @hospital.complement %>
            </td>
            <tr>
              <th>Cidade:</th> 
              <td><%= @hospital.city.name %>
            </td>
            </tr>
            <tr>
              <th>Estado:</th> 
              <td><%= @hospital.state.name %>
            </td>
            </tr>
             <tr>
              <th>Descrição:</th> 
              <td><%= @hospital.description %>
            </td>
            </tr>
            <tr>
               <th colspan="3" align="center">
                  <a href="<%= @url%>/hospitals/<%=@hospital.id%>">
                    <img src="http://www.plantaonet.com/images/ver_hospital_btn.gif" style="max-width:160px;" align="center" class="w125" mc:label="image" mc:edit="tiwc200_image00" border="0" />
                  </a>
                </th>
            </tr>
          </table>
          <!-- // End Module: Standard Content \\ --> 
        </div>
      </td>
    </tr>
  </tbody>
</table>

<%= render "user_mailer/footer_mail" %>