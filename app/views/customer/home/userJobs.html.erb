<div class="well hero">
    <h1>Meus Plantões Cedidos</h1>
       
</div>

<div class="container">
    <ul class="thumbnails">
        <% @jobs.each do |job| %>
            <a href="<%=  job_path(job) %>">
                <li class="span3 white">
                <% if job.request_id.nil? %>
                    <table class="table table-condensed caixa thumbnail" >
                <% else %>
                    <table class="table table-condensed caixa-verde thumbnail" >
                <% end %>

                        <thead>
                        <tr>
                            <th colspan="2">
                                <h4><%= job.area.name %> <br>(<%= job.hospital.city.name %> - <%= job.hospital.state.acronym %>) </h4>
                            </th>
                        </tr>
                         <tr>
                            <th>Local:</th>
                            <td><%=truncate(job.hospital.name, :ommision => "...", :length => 31) %></td>
                        </tr>
                        <tr>
                            <th>Data:</th>
                            <td><%= job.date.strftime("%d/%m/%Y") %> 

                            <b class=" clicavel btn btn-mini btn-d<%= job.date.strftime('%w')%>"  type="button">
                            
                            <%= I18n.t("date."+job.date.strftime("%A"))%>
                            </b>
                            <b class="btn btn-mini btn-<%=job.shift.name%>"><%=job.shift.name%></b>
                            </td>
                        </tr>
                        <tr>
                            <th>Valor:</th>
                            <td><%= to_real(job.price) %></td> 
                        </tr>
                        <tr>
                            <th>Cedente:</th>
                            <td><%= truncate(job.user.name,:ommision => "...", :length => 30) %></td> 
                        </tr>
                        <tr>
                        
                            <td colspan="2" id="job<%=job.id%>">
                                <% if job.request_id.nil? %>
                                    <%= link_to 'Editar', edit_job_path(job),:class => "btn btn-warning" %>
                                    <%= link_to 'Excluir', job_path(job) , confirm: 'Você tem Certeza?', method: :delete, :remote => true,:class => "btn btn-danger" %>
                                <% else %>
                                    <button class="btn btn-warning disabled"> Editar</button>
                                    <button class="btn btn-danger disabled"> Excluir</button>
                                    <button class="btn btn-primary disabled"> Encerrado</button>
                                <% end %>

                            </td>
                         </tr>
                         </thead>
                    </table>
                </li>
            </a>
        <% end %>

    </ul>
    <%= will_paginate @jobs ,options = { :previous_label => "Anterior", :next_label => "Próximo", :class => "apple_pagination"} %>















