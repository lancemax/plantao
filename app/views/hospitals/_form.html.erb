<%= simple_form_for @hospital , :validate => true ,:html => {:class => 'well form-horizontal',:novalidate => true } do |f| %>
  <% if @hospital.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hospital.errors.count, "error") %> prohibited this hospital from being saved:</h2>

      <ul>
      <% @hospital.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>  
  <% end %>

  <div class="control-group">
    <%= f.label 'Nome'  , :class => 'control-label' %>
    <div class="controls"><%= f.text_field :name, :class => 'input-xlarge' %></div>
  </div>

  <div class="control-group">
    <%= f.label 'Endereço'  , :class => 'control-label' %>
    <div class="controls"><%= f.text_field :address, :class => 'input-xlarge' %></div>
  </div>
  <div class="control-group">
    <%= f.label 'Complemento'  , :class => 'control-label' %>
    <div class="controls"><%= f.text_field :complement, :class => 'input-medium' %></div>
  </div>
  <div class="control-group">
    <%= f.label 'Bairro'  , :class => 'control-label' %>
    <div class="controls"><%= f.text_field :neighborhood, :class => 'input-medium' %></div>
  </div>
  <div class="control-group">
    <%= f.label 'CEP'  , :class => 'control-label' %>
    <div class="controls"><%= f.number_field :zip_code, :class => 'input-small' %></div>
  </div>
  
  <div class="control-group">
    <%= f.label 'Estado'  , :class => 'control-label' %>
    <div class="controls">
      <%= f.association :state , :prompt => "Escolha um Estado", :label => false %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Cidade'  , :class => 'control-label' %>
    <div class="controls">
      <%= f.association :city ,:collection => City.find_all_by_state_id(@hospital.state_id), :prompt => "Escolha uma Cidade", :label => false %>
    </div>
    
    
  </div>

  <div class="control-group">
    <%= f.label 'Descrição do Hospital'  , :class => 'control-label' %>
    <div class="controls"><%= f.text_area(:description, :size => "0",:class => "input-xlarge") %></div>
  </div>
  <div class="control-group">
    <%= f.label 'Foto'  , :class => 'control-label' %>
    <div class="controls"><%= f.file_field :image ,:title => 'Procurar', :class => 'span5' %></div>
  </div>
  <div class="form-actions"><%= f.submit "Salvar", :class => "btn btn-primary" %></div>
<% end %>
